@model List<Tatilcim.Common.Dtos.OtelDto>
@{
    ViewBag.Title = "Oteller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="parallax-window" data-parallax="scroll" data-image-src="https://residence.ichotels.com.tr/wp-content/uploads/2015/06/IC-HOTELS-RESIDENCE-LAKE-POOL-1-1.jpg" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1>Oteller</h1>
            <p>Sistemimizden herhangi bir oteli buradan seçebilrsiniz.</p>
        </div>
    </div>
</section>
<!-- End section -->

<main>
    <div id="position">
        <div class="container">
            <ul>
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#">Category</a>
                </li>
                <li>Page active</li>
            </ul>
        </div>
    </div>
    <!-- Position -->

    <div class="container margin_60">

        <div class="row">

            <div class="col-lg-12">

                @foreach (var icerik in Model)
                {
                    <div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">
                        <div class="row">
                            <div class="col-lg-4 col-md-4">
                                <div class="ribbon_3 popular">
                                    <span>Popular</span>
                                </div>
                                <div class="img_list">
                                    <a href="/Detail/Otel/@icerik.Id">
                                        <img src="@icerik.Cover" alt="Image">
                                        <div class="short_info"></div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="tour_list_desc">
                                    <div class="score">
                                        Yıldız<span>@icerik.Star</span>
                                    </div>
                                    <h3><strong>@icerik.Name</strong> Hotel</h3>
                                    <p>@icerik.Description</p>
                                    <ul class="add_info">
                                        @{
                                            if (icerik.Wifi == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Wifi">
                                                        <i class="icon_set_1_icon-86"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.Bar == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Bar">
                                                        <i class="icon_set_1_icon-60"></i>
                                                    </a>
                                                </li>
                                            }


                                            if (icerik.Pool == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Swimming pool">
                                                        <i class="icon_set_2_icon-110"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.Gym == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Fitness Center">
                                                        <i class="icon_set_2_icon-117"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.Restaurant == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Restaurant">
                                                        <i class="icon_set_1_icon-58"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.Spa == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Spa ">
                                                        <i class="icon_set_2_icon-111"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.RoomService == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Oda Servisi ">
                                                        <i class="icon_set_2_icon-105"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.CarPark == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Otopark">
                                                        <i class=" icon_set_1_icon-21"></i>
                                                    </a>
                                                </li>
                                            }

                                            if (icerik.Breakfast == "on")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="tooltip-1" data-placement="top" title="Kahvaltı">
                                                        <i class="icon_set_3_restaurant-10"></i>
                                                    </a>
                                                </li>
                                            }

                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2">
                                <div class="price_list">
                                    <div>

                                        <p>
                                            <a href="/Detail/Otel/@icerik.Id" class="btn_1">Detay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End strip -->
                }

                <hr>

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <span class="page-link">1<span class="sr-only">(current)</span></span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- end pagination-->

            </div>
            <!-- End col lg-9 -->
        </div>
        <!-- End row -->
    </div>
    <!-- End container -->
</main>
<!-- End main -->