@model List<Tatilcim.Common.Dtos.OtelDto>
@foreach (var otel in Model)
{
    <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.1s">
        <div class="tour_container">
            <div class="ribbon_3 popular"><span>Popular</span></div>
            <div class="img_container">
                <a href="/Detail/Otel/@otel.Id">
                    <img src="@otel.Cover" width="800" height="533" class="img-fluid" alt="Image">
                    <div class="short_info">
                        <i class="icon_set_1_icon-6"></i>@otel.Name
                    </div>
                </a>
            </div>
            <div class="tour_title">
                <h3><strong>@otel.Description</strong></h3>
            </div>
        </div><!-- End box tour -->
    </div><!-- End col -->
}