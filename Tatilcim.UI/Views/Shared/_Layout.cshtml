<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Otel Başvuru Formu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form enctype="multipart/form-data" class="form-group" action="/Kayit/OtelBasvuru" method="post">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-12">
                            <input class="form-control mb-2" type="text" name="Name" placeholder="Adı"/>
                            <input class="form-control mb-2" type="tel" name="Tel" placeholder="Telefon"/>
                            <input class="form-control mb-2" type="email" name="Email" placeholder="Email"/>
                            <input class="form-control mb-2" type="text" name="Address" placeholder="Adres"/>
                            <input class="form-control mb-2" type="text" name="Description" placeholder="Açıklama"/>
                            <input class="form-control mb-2" type="number" name="Star" placeholder="Yıldız"/>
                            <input class="form-control mb-2" type="text" name="Cover" placeholder="Kapak Resmi "/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div><input type="checkbox" name="CarPark">Araba Parkı</div>
                            <div><input type="checkbox" name="Restaurant">Restoran</div>
                            <div><input type="checkbox" name="Pool">Havuz</div>
                            <div><input type="checkbox" name="RoomService">Oda Servisi</div>
                            <div><input type="checkbox" name="Wifi">Wifi</div>
                        </div>
                        <div class="col-6">
                            <div><input type="checkbox" name="Bar">Bar</div>
                            <div><input type="checkbox" name="Spa">Spa</div>
                            <div><input type="checkbox" name="Gym">Spor Salonu</div>
                            <div><input type="checkbox" name="Breakfast">Kahvaltı</div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button name="OtelKayıtBasvuru" id="otelKaydet" type="submit" class="btn btn-primary">Kaydol</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /Otel Başvuru Modal -->
<!-- Oda Modal -->
<div class="modal fade" id="odaEkleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Oda Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/Otel/OdaEkle" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Ad:</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Ücret:</label>
                        <input type="number" class="form-control" name="Price">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kişi Sayısı:</label>
                        <input type="number" class="form-control" name="PersonCount">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kapak Resmi:</label>
                        <input type="text" class="form-control" name="Cover">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Telefon:</label>
                                <input type="checkbox" class="form-control" name="Tel">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">TV:</label>
                                <input type="checkbox" class="form-control" name="TV">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Klima:</label>
                                <input type="checkbox" class="form-control" name="Clima">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">MiniBar:</label>
                                <input type="checkbox" class="form-control" name="MiniBar">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Jakuzi:</label>
                                <input type="checkbox" class="form-control" name="Jakuzi">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Balkon:</label>
                                <input type="checkbox" class="form-control" name="Balcony">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Banyo:</label>
                                <input type="checkbox" class="form-control" name="Bathroom">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Fön Makinası:</label>
                                <input type="checkbox" class="form-control" name="Dryer">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Oda Modal Bitiş-->
