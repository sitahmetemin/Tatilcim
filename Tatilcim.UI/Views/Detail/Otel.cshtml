@model Tatilcim.Common.Dtos.OtelDto
@{
    ViewBag.Title = "Otel Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="parallax-window" data-parallax="scroll" data-image-src="@Model.Cover" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-2">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1>@Model.Name</h1>
                    <span>@Model.Description</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End section -->


<main>

    <div class="container margin_60">
        <div class="row">


            <div class="col-lg-12" id="single_tour_desc">
                <div id="single_tour_feat">
                    <h3>Otel Özellikleri</h3>
                    <ul>
                        @{
                            if (Model.Wifi == "on")
                            {
                                <li><i class="icon_set_1_icon-86"></i>Wifi</li>
                            }
                            if (Model.CarPark == "on")
                            {
                                <li><i class="icon_set_1_icon-27"></i>Otopark</li>
                            }
                            if (Model.Restaurant == "on")
                            {
                                <li><i class="icon_set_1_icon-58"></i>Restoran</li>
                            }
                            if (Model.Bar == "on")
                            {
                                <li><i class="icon_set_1_icon-20"></i>Bar</li>
                            }
                            if (Model.Spa == "on")
                            {
                                <li><i class="icon_set_2_icon-111"></i>Spa</li>
                            }
                            if (Model.Pool == "on")
                            {
                                <li><i class="icon_set_2_icon-110"></i>Havuz</li>
                            }
                            if (Model.Gym == "on")
                            {
                                <li><i class="icon_set_2_icon-117"></i>Spor Salonu</li>
                            }
                            if (Model.RoomService == "on")
                            {
                                <li><i class="icon_set_2_icon-105"></i>Oda Servisi</li>
                            }
                            if (Model.Breakfast == "on")
                            {
                                <li><i class="icon_set_1_icon-59"></i>Kahvaltı</li>
                            }


                        }
                        


                    </ul>
                </div>
                
                @{
                    TempData["OtelIdsi"] = Model.Id;
                    Html.RenderAction("_PartialOdaDetay");
                }
                <hr>
            </div>
            <!--End  single_tour_desc-->
        </div>
        <!--End row -->
    </div>
    <!--End container -->

    <div id="overlay"></div>
    <!-- Mask on input focus -->

</main>
<!-- End main -->